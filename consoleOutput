#include <stdio.h>
#include <stdlib.h>
#include <conio.h>
#include <windows.h>
int main() {
	int x, y;
	COORD pos = {1, 0};
	SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), pos);
	printf("<: 커서 시작 위치(%d, %d)", pos.X, pos.Y);
	getch();
	
	
	pos.X = 10;
	pos.Y = 2;
	SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), pos);
	printf("<: 커서 시작 위치(%d, %d)", pos.X, pos.Y);
	getch();
	
	pos.X = 20;
	pos.Y = 5;
	SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), pos);
	printf("<: 커서 시작 위치(%d, %d)", pos.X, pos.Y);
	getch();
	
	pos.X = 40;
	pos.Y = 12;
	SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), pos);
	printf("<: 커서 시작 위치(%d, %d)", pos.X, pos.Y);
	getch();
	
	pos.X = 40;
	pos.Y = 24;
	SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), pos);
	printf("<: 커서 시작 위치(%d, %d)", pos.X, pos.Y);
	getch();
	return 0;
}


#include <stdio.h>
#include <stdlib.h>
#include <conio.h>
#include <windows.h>
int main() {
	int x, y;
	COORD pos = {1, 0};
	SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), pos);
	do
	{
		pos.X = 0;
		pos.Y = 0;
    SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), pos);
		printf("커서의 위치를 입력 하세요: ");
		scanf("%d %d", &pos.X, &pos.Y);
		SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), pos);
		printf("▣");
		getch();
	}while (pos.X <= 80 && pos.Y <= 24);
	return 0;
}




#include <stdio.h>
#include <stdlib.h>
#include <conio.h>
#include <windows.h>

int main() {
	COORD pos = {1, 0};
	do
	{
		pos.X = 0;
		pos.Y = 0;
		SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), pos);
		printf("좌표 : ");
		scanf("%d %d", &pos.X, &pos.Y);
		SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), pos);
		printf("%s", "♡");
		getch();
		
		pos.X = 30;
		pos.Y = 24; 
		SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), pos);
		printf("                                       ");
	}while (1);
	return 0;
}





#include <stdio.h>
#include <stdlib.h>
#include <conio.h>
#include <windows.h>
void GotoXy(int x, int y);
int main() {
	int i, j;
	do
	{
		GotoXY(0, 0);
		printf("%d", i);
		for(j = 0; j < 1000000000; ++j){
		}
		i++;
	}
	while (1);
	
	return 0;
}

void GotoXY(int x, int y)
{
	COORD pos = {x, y};
	SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), pos);
}





